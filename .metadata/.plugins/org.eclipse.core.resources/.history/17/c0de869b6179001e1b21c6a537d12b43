package Disarium_Number;

public interface Test {
	public static void disariumCheck(int number)
	{
		int temporary=number;
		int digit=0;
		int sum=0;
		while(temporary!=0)
		{
			temporary/=10;
			digit++;
		}
		temporary=number;
		for(int i=0;i<digit;i++)
		{
			sum+=power(temporary%10,digit);
			temporary/=10;
			digit--;
		}
		System.out.println(sum);
		if(sum+1==number)
		{
			System.out.println("it is a disarium number");
		}
		else
		{
			System.out.println("it is not a disarium number");
		}
	}
	public static int power(int num,int pow)
	{
		int numb=num;
		for(int i=1;i<pow;i++)
		{
			numb*=num;
		}
		System.out.println(num);
		return numb;
	}
	
}
